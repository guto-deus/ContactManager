@page "{id:int}"
@model ContactManager.Pages.Contacts.DeleteModel

@{
    ViewData["Title"] = "Excluir Contato";
}

<h1>Excluir Contato</h1>

<h4>Você tem certeza que deseja excluir este contato?</h4>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Contact.Name
        </dd>

        <dt class="col-sm-2">
            Contato
        </dt>
        <dd class="col-sm-10">
            @Model.Contact.ContactNumber
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Contact.Email
        </dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
</form>
