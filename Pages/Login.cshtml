@page
@model LoginModel
@{
    ViewData["Title"] = "Lista de Contatos";
}

<h2>Login</h2>
<form method="post">
    <label>Usuário</label>
    <input asp-for="Username" class="form-control" />

    <label>Senha</label>
    <input asp-for="Password" type="password" class="form-control" />

    <button type="submit" class="btn btn-primary mt-3">Entrar</button>
</form>
